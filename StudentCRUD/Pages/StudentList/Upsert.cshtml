@page
@model StudentCRUD.Pages.StudentList.UpsertModel


<br />
<h2 class="text-info">Edit Student's Record'</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Students.ID" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Students.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Students.Name" class="form-control" />
            </div>
            <span asp-validation-for="Students.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Students.RollNo"></label>
            </div>
            <div class="col-6">
                <input asp-for="Students.RollNo" class="form-control" />
            </div>
            <span asp-validation-for="Students.RollNo" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Students.ClassName"></label>
            </div>
            <div class="col-6">
                <input asp-for="Students.ClassName" class="form-control" />
            </div>
            <span asp-validation-for="Students.ClassName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}