@page
@model StudentCRUD.Pages.StudentList.IndexModel
<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Student List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create New Student</a>
    </div>


    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Students.Count() > 0)
            {
        <table class="table table-striped border">
         <tr class="table-secondary">
        <th>
            <label asp-for="Students.FirstOrDefault().Name"></label>
        </th>
        <th>
           
            <label asp-for="Students.FirstOrDefault().RollNo"></label>
        </th>
        <th>
            <label asp-for="Students.FirstOrDefault().ClassName"></label>
        </th>
        <th>

        </th>
    </tr>
    @foreach (var item in Model.Students)
    {
<tr>
    <td>
        @Html.DisplayFor(m => item.Name)
    </td>
    <td>
        @Html.DisplayFor(m => item.RollNo)
    </td>
    <td>
        @Html.DisplayFor(m => item.ClassName)
    </td>
    <td>
        <button asp-page-handler="Delete" asp-route-id="@item.ID" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
        <a asp-page="Upsert" asp-route-id="@item.ID" class="btn btn-success btn-sm text-white">Edit</a>
        <a asp-page="Details" asp-route-id="@item.ID" class="btn btn-success btn-sm text-white">Details</a>
    </td>
</tr>}
</table> }
            else
            {
<p>No books available.</p>            }
        </form>
 </div>
    </div>
